<h1>My Portfolio</h1>

<div class="search-area">
  <h3>Search Crypto Currencies</h3>
  <%= form_tag search_crypto_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :crypto, params[:crypto], placeholder: "Crypto currency name", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search 2x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @crypto %>
  <div class="card card-header results-block">
    <strong>Name: </strong><%= @crypto.name %>
    <strong>Symbol: </strong><%= @crypto.ticker %>
    <strong>Price: </strong><%= @crypto.last_price %>
  </div>
<% end %>